<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mediaplayer_text_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/mediaplayer_tablerow_text_size"
        android:gravity="end|center"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/mediaplayer_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:nextFocusDown="@id/mediaplayer_play"/>

    <Button
        android:id="@+id/mediaplayer_button_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
